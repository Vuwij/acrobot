<robot name="acrobot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="JOINT_FRICTION" value="0.05"/>
    <xacro:property name="JOINT_DAMPING" value="0.02"/>
    <xacro:property name="MOTOR_TORQUE" value="0.22"/>
    <xacro:property name="MOTOR_VELOCITY" value="1.8"/>
    <xacro:property name="PI" value="3.1415928"/>

    <link name="base_link" />

    <link name="leg1">
        <inertial>
            <mass value="256.815e-3"/>
            <origin rpy="0 0 0" xyz="89.16e-3 0 0"/>
            <inertia ixx="6.16e-5" ixy="0.0" ixz="0.0"
                     iyy="3.46e-3" iyz="0.0"
                     izz="3.48e-3"/>
        </inertial>
        <visual name="visual">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://acrobot_description/meshes/leg1.stl" scale="1 1 1"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 0.8 1"/>
            </material>
        </visual>
    </link>

    <link name="leg2">
        <inertial>
            <mass value="166.44e-3"/>
            <origin rpy="0 0 0" xyz="-183.44e-3 0 0"/>
            <inertia ixx="1.94e-4" ixy="0" ixz="0"
                     iyy="2.17e-3" iyz="0"
                     izz="2.34e-3"/>
        </inertial>
        <visual name="visual">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://acrobot_description/meshes/leg2.stl" scale="1 1 1"/>
            </geometry>
            <material name="red">
                <color rgba="0.8 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="base_link" type="fixed">
        <parent link="base_link"/>
        <child link="leg1"/>
        <origin rpy="0 ${PI/2} 0" xyz="0 0 0.354"/>
    </joint>

    <joint name="joint" type="revolute">
        <parent link="leg1"/>
        <child link="leg2"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${JOINT_DAMPING}" friction="${JOINT_FRICTION}" />
        <limit effort="${MOTOR_TORQUE}" lower="-${PI*98/100}" upper="${PI*98/100}" velocity="${MOTOR_VELOCITY}"/>
    </joint>

</robot>
